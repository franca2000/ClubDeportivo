@model ClubDeportivo.Web.Models.ViewModels.InscripcionCreateVM

@{
    ViewData["Title"] = "Inscribir socio en actividad";
}

<h1>Inscribir socio en actividad</h1>

<div class="card">
    <div class="card-body">
        <h4>Socio: @Model.NombreSocio</h4>

        <form asp-action="Create" method="post">
            @* SocioId va oculto *@
            <input type="hidden" asp-for="SocioId" />

            <div class="mb-3">
                <label asp-for="ActividadId" class="form-label"></label>
                <select asp-for="ActividadId"
                        asp-items="Model.ActividadesDisponibles"
                        class="form-select">
                    <option value="">-- Selecciona una actividad --</option>
                </select>
                <span asp-validation-for="ActividadId" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-primary">Confirmar inscripción</button>
            <a asp-controller="Socios"
               asp-action="Index"
               class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

