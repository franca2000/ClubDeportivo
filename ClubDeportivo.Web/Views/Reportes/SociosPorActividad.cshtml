@model IEnumerable<ClubDeportivo.Web.Models.ViewModels.SociosPorActividadVM>

    @{
    ViewData["Title"] = "Socios por actividad";
    }

    <h2>Socios por actividad</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Actividad</th>
                <th>Activa</th>
                <th>Cupo</th>
                <th>Socios inscriptos</th>
                <th>Cupos disponibles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>@item.NombreActividad</td>
                <td>@(item.Activa ? "Sí" : "No")</td>
                <td>@item.Cupo</td>
                <td>@item.SociosInscriptos</td>
                <td>@item.CuposDisponibles</td>
            </tr>
    }
        </tbody>
    </table>    
